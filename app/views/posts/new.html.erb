<div class="forms">
  <h1>Create new post</h1>
  <%= simple_form_for(@post) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :title, placeholder: "Title", label: 'Post Title' %>
      <%= f.input :photos, as: :file, input_html: { multiple: true }, label: 'Add images to your post' %>
      <%= f.label 'Post Content'%>
      <%= f.rich_text_area :rich_content, required: true, label: 'Post Content' %>
      <%= f.input :phone_number, as: :tel, placeholder: '00 380 9202 2 2 22', label: 'Add a contact phone number' %>
      <%= f.input :email, as: :email, placeholder: 'someone@gmail.com', label: 'Add a contact email address' %>
      <%= f.input :website, as: :url, placeholder: 'www.ukraid.com', label: 'Add a corresponding website' %>
      <%= f.input :name, placeholder: 'Title' label: 'Add an address/point of interest' %>
      <%= f.input :location, placeholder: 'Enter a address/location' %>
      <!-- <%= f.fields_for :addresses do |a| %>
        <%= a.input :title %>
        <%= a.input :location %>
      <% end %> !-->
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
