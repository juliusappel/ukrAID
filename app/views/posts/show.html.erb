<div class="post">
  <h1><%= @post.title %></h1>

  <% if @post.photos.attached? %>
    <%= render 'shared/carousel' %>
  <% end %>

  <div class="icons">
    <div class="upvotes">
      <%= @post.vote_score %>
    </div>
    <div class="category">
      Category
    </div>
  </div>

  <div class="contact-details">
    <%= link_to 'Call', "tel:#{@post.phone_number}" %>
    <%= mail_to 'Mail', @post.email %>
    <%= link_to 'Website', @post.website %>
  </div>

  <p> <%= @post.rich_content %></p>
</div>

